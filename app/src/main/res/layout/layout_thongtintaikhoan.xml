<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/bgToolbar">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:layout_margin="100px">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/background_splash_screen"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.2"
        android:orientation="vertical"
        android:background="@color/bgToolbar"
        android:layout_margin="20px">

        <!---Tên Đăng Nhập-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="20px">

            <ImageView
                android:layout_width="150px"
                android:layout_height="150px"
                android:src="@drawable/account_36dp"
                android:scaleType="centerInside"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Tên đăng nhập"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:layout_weight="1"
                    android:textAlignment="textStart"
                    />

                <TextView
                    android:id="@+id/txtTenDangNhap"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Tên đăng nhập"
                    android:textSize="14sp"
                    android:layout_weight="1"
                    android:textAlignment="textStart"
                    />

            </LinearLayout>

        </LinearLayout>

        <!---Họ Tên-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="20px">

            <ImageView
                android:layout_width="150px"
                android:layout_height="150px"
                android:src="@drawable/name_36dp"
                android:scaleType="centerInside"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Họ và Tên"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:layout_weight="1"
                    android:textAlignment="textStart"
                    />

                <TextView
                    android:id="@+id/txtHoTen"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Họ và Tên"
                    android:textSize="14sp"
                    android:layout_weight="1"
                    android:textAlignment="textStart"
                    />

            </LinearLayout>

        </LinearLayout>

        <!---Địa chỉ-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="20px">

            <ImageView
                android:layout_width="150px"
                android:layout_height="150px"
                android:scaleType="centerInside"
                android:src="@drawable/address_36dp"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Địa chỉ"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:layout_weight="1"
                    android:textAlignment="textStart"
                    />

                <TextView
                    android:id="@+id/txtDiaChi"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Địa chỉ"
                    android:textSize="14sp"
                    android:layout_weight="1"
                    android:textAlignment="textStart"
                    />

            </LinearLayout>

        </LinearLayout>

        <!---Ngày sinh-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="20px">

            <ImageView
                android:layout_width="150px"
                android:layout_height="150px"
                android:src="@drawable/calendar_36dp"
                android:scaleType="centerInside"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Ngày sinh"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:layout_weight="1"
                    android:textAlignment="textStart"
                    />

                <TextView
                    android:id="@+id/txtNTNS"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Ngày sinh"
                    android:textSize="14sp"
                    android:layout_weight="1"
                    android:textAlignment="textStart"
                    />

            </LinearLayout>

        </LinearLayout>

        <!---SĐT-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="20px">

            <ImageView
                android:layout_width="150px"
                android:layout_height="150px"
                android:scaleType="centerInside"
                android:src="@drawable/phone_36dp"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Số điện thoại"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:layout_weight="1"
                    android:textAlignment="textStart"
                    />

                <TextView
                    android:id="@+id/txtSDT"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Số điện thoại"
                    android:textSize="14sp"
                    android:layout_weight="1"
                    android:textAlignment="textStart"
                    />

            </LinearLayout>

        </LinearLayout>

        <!---Giới tính-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="20px">

            <ImageView
                android:layout_width="150px"
                android:layout_height="150px"
                android:scaleType="centerInside"
                android:src="@drawable/gender"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Giới tính"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:layout_weight="1"
                    android:textAlignment="textStart"
                    />

                <TextView
                    android:id="@+id/txtGioiTinh"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Giới tính"
                    android:textSize="14sp"
                    android:layout_weight="1"
                    android:textAlignment="textStart"
                    />

            </LinearLayout>

        </LinearLayout>

        <!---Số CMND-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="20px">

            <ImageView
                android:layout_width="150px"
                android:layout_height="150px"
                android:scaleType="centerInside"
                android:src="@drawable/idcard_36dp"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Số CMND"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:layout_weight="1"
                    android:textAlignment="textStart"
                    />

                <TextView
                    android:id="@+id/txtCMND"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Số CMND"
                    android:textSize="14sp"
                    android:layout_weight="1"
                    android:textAlignment="textStart"
                    />

            </LinearLayout>

        </LinearLayout>

        <!---Loại tài khoản-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="20px">

            <ImageView
                android:layout_width="150px"
                android:layout_height="150px"
                android:scaleType="centerInside"
                android:src="@drawable/role_36dp"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Loại tài khoản"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:layout_weight="1"
                    android:textAlignment="textStart"
                    />

                <TextView
                    android:id="@+id/txtLoaiTaiKhoan"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Loại tài khoản"
                    android:textSize="14sp"
                    android:layout_weight="1"
                    android:textAlignment="textStart"
                    />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="20px">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btnDoiMatKhau"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Đổi mật khẩu"
                    android:textAllCaps="false"
                    android:background="@drawable/bg_shape_corner_color_orange"
                    android:layout_marginRight="10dp"
                    />

                <Button
                    android:id="@+id/btnDoiThongTin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Đổi thông tin"
                    android:textAllCaps="false"
                    android:background="@drawable/bg_shape_corner_color_red"
                    android:layout_marginLeft="10dp"
                    />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
</LinearLayout>