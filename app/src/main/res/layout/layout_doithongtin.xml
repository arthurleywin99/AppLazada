<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/bgToolbar"
    tools:context=".View.DoiThongTinTaiKhoan.DoiThongTinTaiKhoanActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:layout_margin="100px">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/background_splash_screen"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.2"
        android:orientation="vertical"
        android:background="@color/bgToolbar"
        android:layout_margin="20px">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Thay Đổi Thông Tin Tài Khoản"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginBottom="40dp"
            android:textAlignment="center"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="10dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Họ Tên"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:layout_weight="3"
                android:layout_gravity="center"
                />

            <EditText
                android:id="@+id/edHoTen"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/g_ed_background_smaller"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="18sp"
                android:hint="Nhập họ và tên"
                android:textColorHint="@color/gray"
                android:paddingLeft="18dp"
                android:layout_weight="1"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="10dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Địa chỉ"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:layout_weight="3"
                android:layout_gravity="center"
                />

            <EditText
                android:id="@+id/edDiaChi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/g_ed_background_smaller"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="18sp"
                android:hint="Nhập địa chỉ"
                android:textColorHint="@color/gray"
                android:paddingLeft="18dp"
                android:layout_weight="1"
                />

        </LinearLayout>

        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="10dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ngày Sinh"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:layout_weight="3"
                android:layout_gravity="center"
                />

            <DatePicker
                android:id="@+id/dpNgaySinhDK"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:datePickerMode="spinner"
                android:calendarViewShown="false"
                android:hint="Địa chỉ"
                android:layout_weight="1"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="10dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="SĐT"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:layout_weight="3"
                android:layout_gravity="center"
                />

            <EditText
                android:id="@+id/edSDT"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/g_ed_background_smaller"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="18sp"
                android:hint="Số điện thoại"
                android:textColorHint="@color/gray"
                android:paddingLeft="18dp"
                android:layout_weight="1"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="10dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Giới tính"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:layout_weight="3"
                android:layout_gravity="center"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                >

                <RadioGroup
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    >

                    <RadioButton
                        android:id="@+id/rdNam"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:textSize="16sp"
                        android:text="Nam"
                        />

                    <RadioButton
                        android:id="@+id/rdNu"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="Nữ"
                        android:textSize="16sp"
                        />

                </RadioGroup>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="20dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="CMND"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:layout_weight="3"
                android:layout_gravity="center"
                />

            <EditText
                android:id="@+id/edCMND"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/g_ed_background_smaller"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="18sp"
                android:hint="Chứng minh nhân dân"
                android:textColorHint="@color/gray"
                android:paddingLeft="18dp"
                android:layout_weight="1"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <Button
                    android:id="@+id/btnDoiThongTin"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Đổi thông tin"
                    android:textSize="18sp"
                    android:textAllCaps="false"
                    android:background="@drawable/bg_shape_corner_color_orange"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                />

        </LinearLayout>

    </LinearLayout>
</LinearLayout>